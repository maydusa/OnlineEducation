.container {
  justify-content: flex-start;
}
.msg-item {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.msg-item-left {
  display: flex;
  align-items: center;
}
.avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.icon {
  width: 46rpx;
  height: 46rpx;
}
.text {
  font-size: 32rpx;
  color: #777;
}