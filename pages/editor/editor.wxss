.container {
  padding: 20rpx;
  align-items: flex-end;
}
.title {
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}
.content-wrap {
  width: 100%;
  flex: 1;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 15rpx;
  overflow-y: scroll;
  margin-bottom: 20rpx;
}
.content {
  width: 100%;
  height: 700rpx;
  border-bottom: 10rpx dotted #999;
}
.imgs {
  width: 100%;
  display: flex;
  flex: 1;
  justify-content: flex-start;
  flex-direction: row;
  padding-top: 20rpx;
}
.btn-upload {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  border: 4rpx dashed #d9d9d9;
  background-color: #fafafa;
  background-image: url("http://localhost:3001/images/add.png");
  background-size: 60%;
  background-repeat: no-repeat;
  background-position: center;
  margin: 5rpx;
}
.img-wrap {
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #d9d9d9;
  border-radius: 10rpx;
  box-sizing: border-box;
  margin: 5rpx;
  overflow: hidden;
  position: relative;
}
.img {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.img-mask {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
}
.uploading-icon {
  width: 60rpx;
  height: 60rpx;
  animation: rotate 2s infinite;
}
.btn-submit {
  width: 120rpx;
  height: 80rpx;
  font-size: 36rpx;
  margin: 0;
  padding: 0;
  text-align: center;
  color: #fff;
  background-color: #53bfa2;
  line-height: 80rpx;
  border: none;
}

@keyframes rotate{
  0% {
    transform: rotate(0deg);
  }
  100%{ 
    transform: rotate(360deg);
  }
}