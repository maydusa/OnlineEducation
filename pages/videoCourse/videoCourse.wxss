.container {
  background-color: #fff;
  justify-content: flex-start;
}
.video {
  width: 100%;
  height: 480rpx;
  display: block;
}
.menu {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  box-shadow: 0 2px 8px #f0f1f2;
}
.tabs-wrap {
  flex-grow: 1;
}
.tabs {
  display: flex;
  height: 100%;
  flex-direction: row;
}
.tab-item {
  height: 100%;
  flex-grow: 1;
  font-size: 32rpx;
  color: #666;
  text-align: center;
  line-height: 100rpx;
}
.tab-item-active {
  border-bottom: 1.5px solid #53bfa2;
}
.btn {
  width: 100rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  background-color: #53bfa2;
  box-sizing: border-box;
  padding: 12rpx 0;
}
.btn-header {
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-icon {
  width: 34rpx;
  height: 34rpx;
}
.btn-icon-like {
  margin-right: 5rpx;
}
.btn-icon-star {
  margin-bottom: 5rpx;
}
.btn-text,
.btn-num {
  font-size: 26rpx;
  color: #fff;
}
.notes,
.danmus {
  width: 100%;
}
.note,
.danmu {
  width: 100%;
  padding: 15rpx;
  box-sizing: border-box;
}
.note-header,
.danmu-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.note-header-left,
.danmu-header-left {
  display: flex;
  align-items: center;
}
.avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}
.nickname {
  font-size: 34rpx;
  color: #666;
}
.date {
  font-size: 24rpx;
  color: #888;
}
.content {
  font-size: 32rpx;
  color: #666;
}
.input-block {
  width: 100%;
  min-height: 90rpx;
  height: fit-content;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 15rpx;
}
.input {
  background-color: #fff;
  border-radius: 10rpx;
  color: #666;
  padding: 10rpx;
  font-size: 32rpx;
  margin-right: 15rpx;
}
.send-icon {
  width: 46rpx;
  height: 46rpx;
}