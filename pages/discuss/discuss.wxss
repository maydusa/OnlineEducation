.container {
  padding: 10rpx 30rpx;
  height: fit-content;
  background-color: #fff;
  justify-content: flex-start;
  overflow-y: scroll;
}
.discussion {
  width: 100%;
  padding: 20rpx 0 20rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #aeaeae;
}
.discussion:last-of-type {
  border-bottom: none;
}
.discussion-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.userInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.avatar {
  width: 70rpx;
  height: 70rpx;
  margin-right: 15rpx;
}
.nickname {
  color: #666;
  font-size: 40rpx;
}
.date {
  color: #888;
  font-size: 28rpx;
}
.content-wrap {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.title {
  font-size: 38rpx;
  color: #404040;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin-bottom: 10rpx;
  font-weight: 800;
}
.content {
  font-size: 36rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin-bottom: 16rpx;
}
.images {
  margin-left: -5rpx;
  margin-right: -5rpx;
}
.image {
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #d9d9d9;
  border-radius: 10rpx;
  box-sizing: border-box;
  margin: 5rpx;
}
.operations {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.operation-wrap {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.operation-wrap:last-of-type {
  margin-right: 0;
}
.operation-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.operation-text {
  font-size: 32rpx;
  color: #666;
}
.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  animation: rotate 2s infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}