.container {
  background-color: #f2f4f5;
}
.block {
  width: 100%;
  height: 400rpx;
  background-color: red;
  margin-bottom: 20rpx;
}
.dialogue {
  flex-shrink: 0;
  flex-grow: 1;
  background-color: #f2f4f5;
}
.single-msg-other {
  display: flex;
  padding: 20rpx;
}
.single-msg-self {
  display: flex;
  padding: 20rpx;
  flex-direction: row-reverse;
}
.avatar {
  width: 70rpx;
  height: 70rpx;
}
.avatar-self {
  margin-left: 15rpx;
}
.avatar-other {
  margin-right: 15rpx;
}
.msg-right-self {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.msg-right-other {
  display: flex;
  flex-direction: column;
}
.nickname {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 8rpx;
}
.content {
  background-color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  color: #000;
  font-size: 34rpx;
}
.input-block {
  width: 100%;
  height: fit-content;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  background-color: #f2f4f5;
  display: flex;
}
.input {
  background-color: #fff;
  padding: 10rpx 5rpx;
  font-size: 34rpx;
  color: #666;
  border-radius: 10rpx;
  margin-right: 15rpx;
}
.input-block-icon {
  width: 70rpx;
  height: 60rpx;
}
.input-block-icon:first-of-type {
  margin-right: 10rpx;
}