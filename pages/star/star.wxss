.container {
  justify-content: flex-start;
}
.tabs {
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  border-bottom: 1.2px solid #777;
}
.tab-item {
  height: 80rpx;
  font-size: 34rpx;
  line-height: 80rpx;
  color: #666;
}
.tab-item-active {
  color: #53bfa2;
  border-bottom: 1.5px solid #53bfa2;
}
.star-item-wrap {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #aeaeae;
}
.star-item {
  width: 100%;
  height: 254rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.star-item:last-of-type {
  border-bottom: none;
}
.star-item-left {
  width: 100%;
  min-width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.star-item-body {
  width: calc(100% - 70rpx - 15rpx);
  min-width: calc(100% - 70rpx - 15rpx);
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-right: 20rpx;
}
.star-item-basic {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.avatar {
  width: 70rpx;
  min-width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 15rpx;
}
.nickname {
  color: #666;
  font-size: 40rpx;
}
.date {
  color: #888;
  font-size: 28rpx;
}
.title {
  font-size: 36rpx;
  color: #404040;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin-bottom: 10rpx;
}
.content {
  font-size: 35rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.cancelStar {
  width: 100rpx;
  min-width: 100rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fe5952;
}
.cancelStar-text {
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  letter-spacing: 8rpx;
}

.course-star-item-body {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.course-nickname {
  font-size: 32rpx;
  color: #888;
}
.course-date {
  font-size: 30rpx;
  color: #888;
}
.course-star-item {
  width: 100%;
  height: 160rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.course-star-item-left {
  width: 100%;
  min-width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.cover {
  width: 200rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}